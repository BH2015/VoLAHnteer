extends ../layout

block content
  .page-header
    h3 Sign up
  form.form-horizontal(id='signup-form', method='POST')
    .form-group
      label.col-sm-3.control-label(for='name') Name
      .col-sm-7
        input.form-control(type='text', name='name', id='name', placeholder='Name', autofocus)
    .form-group
      label.col-sm-3.control-label(for='email') Email
      .col-sm-7
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus)
    .form-group
      label.col-sm-3.control-label(for='phone') Phone
      .col-sm-7
        input.form-control(type='tel', name='phone', id='phone', placeholder='Phone Number', autofocus)
    .form-group
      label.col-sm-3.control-label(for='preferences') Preferences
      .col-sm-7
        label
          input.form-control(type='checkbox', name='preferences', id='preferences', value="Elderly")
          | Elderly&nbsp;&nbsp;
        label
          input.form-control(type='checkbox', name='preferences', id='preferences', value="Environment")
          | Environment&nbsp;&nbsp;
        label
          input.form-control(type='checkbox', name='preferences', id='preferences', value="Animal")
          | Animal&nbsp;&nbsp;
        label
          input.form-control(type='checkbox', name='preferences', id='preferences', value="Children")
          | Children&nbsp;&nbsp;
      .form-group
      label.col-sm-3.control-label(for='password') Password
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Password')
    .form-group
      label.col-sm-3.control-label(for='confirmPassword') Confirm Password
      .col-sm-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password')
    .form-group
      .col-sm-offset-3.col-sm-7
        button.btn.btn-success(type='submit')
          span.ion-person-add
          | Signup
